<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.user.SignUp">

    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/TRTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textSize="36sp"
                android:textStyle="bold|italic"
                tools:text="@string/sign_up" />
        </TableRow>

        <TableRow
            android:id="@+id/TRTxtUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|start">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/username"
                tools:text="@string/username" />
        </TableRow>

        <TableRow
            android:id="@+id/TRETxtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start">

            <EditText
                android:id="@+id/editTxtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="start"
                android:hint="@string/username"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/empty"
                tools:text="@string/empty" />
        </TableRow>

        <TableRow
            android:id="@+id/TRTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|start">

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/email"
                tools:text="@string/email" />
        </TableRow>

        <TableRow
            android:id="@+id/TRETxtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start">

            <EditText
                android:id="@+id/editTxtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="start"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/empty"
                tools:text="@string/empty" />
        </TableRow>

        <TableRow
            android:id="@+id/TRTxtPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|start">

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/password"
                tools:text="@string/password" />
        </TableRow>

        <TableRow
            android:id="@+id/TRETxtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start">

            <EditText
                android:id="@+id/editTxtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="start"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/empty"
                tools:text="@string/empty" />
        </TableRow>

        <TableRow
            android:id="@+id/TRTxtRPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|start">

            <TextView
                android:id="@+id/txtRPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/rPassword"
                tools:text="@string/rPassword" />
        </TableRow>

        <TableRow
            android:id="@+id/TRETxtRPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start">

            <EditText
                android:id="@+id/editTxtRPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="start"
                android:hint="@string/rPassword"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/empty"
                tools:text="@string/empty" />
        </TableRow>

        <TableRow
            android:id="@+id/TRBtnNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnNext"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="onClickNext"
                android:text="@string/next"
                tools:text="@string/next" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back_arrow"
                android:onClick="onClickBack"
                app:srcCompat="@android:drawable/ic_menu_revert" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>